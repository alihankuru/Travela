@model List<ResultCategoryDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Görsel</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
                <td></td>
                <td>@item.CategoryName</td>
                <td>@item.ImageUrl</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-danger">Güncelle</a> </td>
            </tr>
        }
    </table>
    <td><a href="/Category/CreateCategory" class="btn btn-danger">Ekle</a> </td>
</div>