@model List<ResultDestinationDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Resim</th>
            <th>Gün Sayısı</th>
            <th>Alt Başlık</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Tarih</th>

         
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
             
                <td>@item.DestinationId</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.ImageUrl</td>
                <td>@item.CountDay</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Date</td>
               
                <td><a href="/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger">Sil</a> </td>
                <td><a href="/Destination/UpdateDestination/@item.DestinationId" class="btn btn-danger">Güncelle</a> </td>
      
            </tr>
        }
    </table>
    <td><a href="/Destination/CreateDestination" class="btn btn-danger">Ekle</a> </td>
</div>
